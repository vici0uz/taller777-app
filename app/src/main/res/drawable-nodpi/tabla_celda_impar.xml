<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/fondo_tabla_presed"/>
            <stroke
                android:width="1dp"
                android:color="@color/gris"/>
            <corners
                android:radius="7dp"/>
            <padding
                android:left="10dp"
                android:top="13dp"
                android:right="10dp"
                android:bottom="13dp"/>
        </shape>
    </item>

    <item
        android:state_focused="false"
        android:state_pressed="false">
        <shape>
            <solid
                android:color="#FFFFFF"/>
            <stroke
                android:width="1dp"
                android:color="#212121"/>
            <corners
                android:radius="7dp"/>
        </shape>

    </item>
</selector>